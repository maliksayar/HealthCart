@* Prescription Medicines  *@
<section class="ftco-section bg-light pt-3 pb-2">
	<div class="container">
		<div class="row justify-content-center mb-3 pb-3">
			<div class="col-md-12 heading-section text-center ftco-animate">
				<h2 class="mb-4">Prescription Medicines</h2>
				<p class="text-dark">Authentic prescription medications from verified manufacturers, ensuring your health and safety with every order.</p>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			@foreach (var product in Model.Products.Where(p => p.Category == ProductCategory.Prescription).Take(4))
			{
				<div class="col-sm col-md-6 col-lg-3 ftco-animate">
					<div class="product">
						<a asp-controller="Product" asp-action="Details" asp-route-ProductId="@product.ProductId"
							class="img-prod"><img class="img-fluid" src="@product.ImageUrl" alt="">
							<div class="overlay"></div>
						</a>
						<div class="text py-3 px-3">
							<h3><a asp-controller="Product" asp-action="Details"
									asp-route-ProductId="@product.ProductId">@product.Name</a></h3>
							<div class="d-flex">
								
								<div class="pricing">
									<p class="price"><span>$ @product.Price</span></p>
								</div>

								<div class="rating">
									<p class="text-right">
										@{
											var rating = (int)(product?.Rating ?? 0);
											for (int i = 1; i <= 5; i++)
											{
												if (i <= rating)
												{
													<a href="#"><span class="ion-ios-star"></span></a>
												}
												else
												{
													<a href="#"><span class="ion-ios-star-outline"></span></a>
												}
											}
										}
									</p>
								</div>

							</div>
							<p class="bottom-area d-flex px-3">
								<a asp-controller="Product" asp-action="AddToCart" asp-route-ProductId="@product.ProductId"
									class="add-to-cart text-center py-2 mr-1">
									<span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
							</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>

