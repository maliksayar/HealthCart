@* Best Sellers  *@
<section class="ftco-section bg-light pt-3">
	<div class="container">
		<div class="row justify-content-center mb-3 pb-3">
			<div class="col-md-12 heading-section text-center ftco-animate">
				<h2 class="mb-4">Best Selling Products</h2>
				<p>Discover our most trusted products—customer favorites that deliver quality, reliability, and value. From essential medicines to wellness supplements, these are the products our customers rely on every day!</p>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row">

			@foreach (var product in Model.Products.Where(p => p.Category == ProductCategory.Prescription || p.Category == ProductCategory.OtcMedicines).Take(8).Skip(4))
