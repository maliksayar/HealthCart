@model HealthCart.Models.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Manage Orders";
}



@if (TempData["Message"] != null)
{
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
}


@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
}





<div class="mb-3 container">
    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary shadow-sm">
        <i class="bi bi-arrow-left-circle me-2"></i> Back to Dashboard
    </a>
</div>

<div class="container my-5">
    <h2 class="mb-4">
        <i class="bi bi-cart-check"></i> Manage Orders
    </h2>



  <div class="row mb-4">
    <div class="col-md-12 d-flex flex-wrap gap-3">


            <a class="btn btn-outline-success shadow-sm d-flex align-items-center gap-2 mr-2 mb-2" asp-controller="admin" asp-action="createProduct">
            <i class="bi bi-plus-square-fill mr-2"></i> Add Product to Inventory
        </a>

        <a class="btn btn-outline-dark shadow-sm d-flex align-items-center gap-2 mr-2 mb-2" asp-controller="admin" asp-action="UserDb">
            <i class="bi bi-people-fill mr-2"></i> Users Database
        </a>

    

        <a class="btn btn-outline-primary shadow-sm d-flex align-items-center gap-2 mr-2 mb-2" asp-controller="admin" asp-action="ProductList">
            <i class="bi bi-box-seam-fill mr-2"></i> Products Database
        </a>

    
    </div>
</div>



  <div class="row mb-4">

    <!-- Total Orders -->
    <div class="col-lg-3 mb-3">
        <div class="card text-white bg-warning shadow-sm rounded-3">
             <div class="card-body d-flex justify-content-between align-items-center gap-2">
                <div>
                    <h5 class="card-title">Total Orders</h5>
                    <h3>@Model.Orders.Count</h3>
                </div>
                <i class="bi bi-cart-check-fill display-4 pt-4"></i>
            </div>
        </div>
    </div>

    <!-- Total Revenue -->
    <div class="col-lg-3 mb-3">
        <div class="card text-white bg-black shadow-sm rounded-3">
            <div class="card-body d-flex justify-content-between align-items-center gap-2">
                <div>
                    <h5 class="card-title text-light">Total Revenue</h5>
                    <h3 class="text-light">₹@Model.Orders.Sum(o => o.TotalPrice).ToString("0.00")</h3>
                </div>
                <i class="bi bi-bar-chart-fill display-4 pt-3"></i>
            </div>
        </div>
    </div>

    <!-- RazorPay Payments -->
    <div class="col-lg-3 mb-3">
        <div class="card text-white bg-info shadow-sm rounded-3">
              <div class="card-body d-flex justify-content-between align-items-center gap-2">
                <div>
                    <h5 class="card-title">Online Payment</h5>
                    <h3>₹@Model.Orders.Where(o => o.PaymentStatus == HealthCart.Types.PaymentStatus.RazorPay).Sum(o => o.TotalPrice).ToString("0.00")</h3>
                </div>
                <i class="bi bi-credit-card-2-front-fill display-4 pt-4"></i>
            </div>
        </div>
    </div>

    <!-- COD Orders -->
    <div class="col-lg-3 mb-3">
        <div class="card text-white bg-success shadow-sm rounded-3">
             <div class="card-body d-flex justify-content-between align-items-center  gap-2">
                <div>
                    <h5 class="card-title">Cash on Delivery</h5>
                    <h3>₹@Model.Orders.Where(o => o.PaymentStatus == HealthCart.Types.PaymentStatus.CashOnDelivery).Sum(o => o.TotalPrice).ToString("0.00")</h3>
                </div>
                <i class="bi bi-truck display-4 pt-4 "></i>
            </div>
        </div>
    </div>

</div>





    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Payment</th>
                        <th>Total</th>
                        <th>Date Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            @* <td>@order.OrderId.ToString().Substring(0, 8)...</td> *@
                            <td>@(order.Address?.FirstName) @(order.Address?.LastName) <br>

                                @order.Address?.Street , @order.Address?.City <br>
                                @order.Address?.State<br>
                                @order.Address?.Pincode , @order.Address?.Country


                            </td>
                            <td>
                                <span class="badge bg-info"> <span class="text-light"> @order.OrderStatus</span> </span>
                            </td>
                            <td>
                                @if (order.PaymentStatus == HealthCart.Types.PaymentStatus.RazorPay)
                                {
                                    <span class="badge bg-success">
                                        <span class="text-light"><i class="bi bi-check-circle-fill"></i> Paid </span>
                                    </span>
                                }
                                else if (order.PaymentStatus == HealthCart.Types.PaymentStatus.CashOnDelivery)
                                {
                                    <span class="badge bg-warning">
                                        <span class="text-light"> <i class="bi  bi-hourglass-split"></i> COD</span>
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle-fill"></i> Pending
                                    </span>
                                }
                            </td>
                            <td class="fw-bold text-success">₹@order.TotalPrice</td>
                            <td>@order.DateCreated?.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt")</td>
                            <td>
                                @* <a href="@Url.Action("ViewOrder", "Admin", new { orderId = order.OrderId })"
                                    class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye-fill"></i>
                                </a> *@
                                @* <a href="@Url.Action("DeleteOrder", "Admin", new { orderId = order.OrderId })"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this order?');">
                                    <i class="bi bi-trash-fill"></i>
                                </a> *@

                                <a href="@Url.Action("DispatchOrder", "Admin", new { orderId = order.OrderId })"
                                    class="btn btn-sm btn-success ms-1"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="top"
                                    title="Dispatch the order"
                                    onclick="return confirm('Are you sure you want to dispatch this order?');">
                                    <i class="bi bi-truck"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">
            <i class="bi bi-exclamation-triangle-fill"></i> No orders found.
        </div>
    }
</div>