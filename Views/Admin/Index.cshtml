@{
    ViewBag.Title = "Admin Dashboard";
}




<div class="container pt-5">


@if (TempData["Message"] != null)
{
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
}


@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
}


    

    <div class="row">
        <div class="col-lg-6">
            <h3> Admin Dashboard</h3>
            <h4>Welcome, @ViewBag.Username</h4>
            <p>This is your admin dashboard where you can manage the application.</p>


        </div>

           <!-- Total Revenue -->
        <div class="col-lg-6 mb-3">
            <div class="card text-white bg-dark shadow-sm rounded-3 card-hover fade-in">
                <div class="card-body d-flex justify-content-between align-items-center gap-2">
                    <div>
                        <h5 class="card-title text-light">Total Revenue This month </h5>
                        <h3 class="text-light">â‚¹ @ViewBag.TotalRevenue</h3>
                    </div>
                    <i class="bi bi-currency-dollar display-4 pt-3"></i>
                </div>
            </div>
        </div>
    </div>



  <div class="row mb-4">
    <div class="col-md-12 d-flex flex-wrap gap-3">

        <a class="btn btn-outline-dark shadow-sm d-flex align-items-center  mr-2 mb-2" asp-controller="admin" asp-action="UserDb">
            <i class="bi bi-people-fill mr-2 "></i> Users Database
        </a>


        <a class="btn btn-outline-primary shadow-sm d-flex align-items-center mr-2 mb-2" asp-controller="admin" asp-action="ProductList">
            <i class="bi bi-box-seam-fill mr-2 "></i> Products Database
        </a>

        <a class="btn btn-outline-success shadow-sm  d-flex align-items-center  mr-2 mb-2" asp-controller="admin" asp-action="OrderList">
            <i class="bi bi-bag-fill mr-2 "></i> Orders Database
        </a>

     

    </div>
</div>


    <div class="row mt-4">

        <!-- Total Users -->
        <div class="col-lg-3 mb-3">
            <a asp-controller="admin" asp-action="UserDb"> 
            <div class="card text-white bg-primary shadow-sm rounded-3 card-hover fade-in">
                <div class="card-body d-flex justify-content-between align-items-center gap-2">
                    <div>
                        <h5 class="card-title">Total Users</h5>
                        <h3>@ViewBag.TotalUsers</h3>
                    </div>
                    <i class="bi bi-people-fill display-4 pt-4"></i>
                </div>
            </div>
            </a>
        </div>

     

        <!-- Total Products -->
        <div class="col-lg-3 mb-3">
            <a asp-controller="admin" asp-action="ProductList">
       
            <div class="card text-white bg-info shadow-sm rounded-3 card-hover fade-in">
                <div class="card-body d-flex justify-content-between align-items-center gap-2">
                    <div>
                        <h5 class="card-title">Total Products</h5>
                        <h3>@ViewBag.TotalProducts</h3>
                    </div>
                    <i class="bi bi-box-seam-fill display-4 pt-4"></i>
                </div>
            </div>

                     
            </a>
        </div>

        <!-- Total Orders -->
        <div class="col-lg-3 mb-3">
            <a asp-controller="admin" asp-action="OrderList">
            <div class="card text-white bg-success shadow-sm rounded-3 card-hover fade-in">
                <div class="card-body d-flex justify-content-between align-items-center gap-2">
                    <div>
                        <h5 class="card-title">Total Orders</h5>
                        <h3>@ViewBag.TotalOrders</h3>
                    </div>
                    <i class="bi bi-bag-check-fill display-4 pt-4"></i>
                </div>
            </div>
            </a>
        </div>

         <div class="col-lg-3 mb-3">
            <a asp-controller="admin" asp-action="OrderList">
            <div class="card text-white bg-black shadow-sm rounded-3 card-hover fade-in">
                <div class="card-body d-flex justify-content-between align-items-center gap-2">
                    <div >
                        <h5 class="card-title text-light">Dispatched</h5>
                        <h3 class="text-light" >@ViewBag.TotalOrders</h3>
                    </div>
                    <i class="bi bi-truck display-4 pt-4"></i>
                </div>
            </div>
            </a>
        </div>

    </div>



    <partial name="~/Views/Shared/AdminGuide.cshtml" />