    </div>


        <div class="my-3"><h2> Listed Products </h2> </div>

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th style="width: 140px;">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var product in Model.Products.Where(p => p.IsDeleted == false && p.IsActive == true))
                    {
                        <tr>

                            <td>
                                <img src="@product.ImageUrl" alt="@product.Name" width="60" height="60"
                                    style="object-fit: cover;" class="rounded" />
                            </td>
                            <td>@product.Name</td>
                            <td>@(product.Description?.Length > 50 ? product.Description.Substring(0, 50) + "..." :
                                                        product.Description)</td>
                    <td class="fw-bold text-success">₹@product.Price</td>
                    <td class="fw-bold text-success">@product.Discount %</td>
                    <td>
                        <a href="@Url.Action("EditProduct", "Admin", new { ProductId = product.ProductId })"
                            class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@Url.Action("DeleteProduct", "Admin", new { ProductId = product.ProductId })"
                            class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure you want to delete this product?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
                                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">
            <i class="bi bi-exclamation-triangle"></i> No products found in the system.
        </div>
    }




  <div class="my-3"><h2> De-Listed Products </h2> </div>

     @if (Model.Products != null && Model.Products.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
